<div style="position: absolute; top: 8px; right: 8px; z-index: 10;">
    <MudIconButton Icon="@(auction.IsWatchListed? Icons.Material.Filled.Favorite : Icons.Material.Outlined.FavoriteBorder)"
                   Color="@(auction.IsWatchListed ? Color.Error : Color.Default)"
                   Style="background-color: rgba(255, 255, 255, 0.9); backdrop-filter: blur(4px);"
                   Size="Size.Medium"
                   OnClick="HandleClicked"
                   aria-label="إضافة إلى المفضلة" />
</div>

@code {
    [Parameter]
    public AuctionsInHomePageDto auction { get; set; } = default!;
    [Parameter]
    public EventCallback<AuctionsInHomePageDto> OnFavoriteToggled { get; set; }

    private async Task HandleClicked()
    {
        if (OnFavoriteToggled.HasDelegate)
        {
            await OnFavoriteToggled.InvokeAsync(auction);
        }
    }



}
